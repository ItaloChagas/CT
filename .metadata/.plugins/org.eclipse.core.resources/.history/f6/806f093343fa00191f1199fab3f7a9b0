package exec1.ct;

import java.util.Scanner;

public class exec01 {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		int entrada =0;
		int tentativa =0;

		do {
			if(tentativa >=3) {
				System.out.println("Número de tentativas excedido");
				entrada =9;
			}else {
				System.out.println("Informar um numero entra 1 e 9.");
				entrada = sc.nextInt();
				tentativa +=1;
			}

		}while (entrada <= 0 || entrada >=10);

		if(tentativa >=3) {
			System.out.println("saindo...");
		}
		
		
		
		
		
		

	}
	
	public static String multiplicacao(int num) {
		
		num * num
		
	}

}
